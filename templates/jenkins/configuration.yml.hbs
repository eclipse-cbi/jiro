jenkins:
  numExecutors: 0
  scmCheckoutRetryCount: 2
  mode: EXCLUSIVE
  systemMessage: ""

  disableRememberMe: false
  agentProtocols:
    - "JNLP4-connect"
    - "Ping"

  authorizationStrategy:
    projectMatrix:
      grantedPermissions:
        {{> permissions }}

  markupFormatter: rawHtml
  crumbIssuer:
    standard:
       excludeClientIPFromCrumb: false
  remotingSecurity:
    enabled: true

  securityRealm:
    ldap:
      configurations:
        - displayNameAttributeName: cn
          groupSearchBase: ou=group
          rootDN: dc=eclipse,dc=org
          server: ldapmaster
          userSearch: mail={0}
          mailAddressAttributeName: mail

  clouds:
  - kubernetes:
      name: "kubernetes"
      containerCapStr: "{{jenkins.maxConcurrency}}"
      jenkinsUrl: "http://jenkins-ui.{{project.shortName}}.svc.cluster.local{{deployment.prefix}}"
      jenkinsTunnel: "jenkins-discovery.{{project.shortName}}.svc.cluster.local:{{deployment.jnlpPort}}"
      maxRequestsPerHostStr: "32"
      namespace: "{{project.shortName}}"
      podRetention: "never"
      templates:
      - containers:
        - image: "{{docker.agent.defaultImage.name}}:{{docker.agent.defaultImage.tag}}@sha256:{{docker.agent.defaultImage.sha256}}"
          livenessProbe:
            failureThreshold: 0
            initialDelaySeconds: 0
            periodSeconds: 0
            successThreshold: 0
            timeoutSeconds: 0
          name: "jnlp"
          resourceLimitCpu: "2375m"
          resourceRequestCpu: "1250m"
          resourceLimitMemory: "2560Mi"
          resourceRequestMemory: "2560Mi"
          ttyEnabled: true
          command: ""
          args: ""
        instanceCap: 5
        name: "default-agent"
        namespace: "{{project.shortName}}"
        nodeUsageMode: NORMAL
        volumes:
        - persistentVolumeClaim:
            claimName: "tools-claim-jiro-{{project.shortName}}"
            mountPath: "/opt/tools"
            readOnly: true
        - configMapVolume:
            configMapName: "known-hosts"
            mountPath: "/home/jenkins/.ssh/"
        - emptyDirVolume:
            memory: false
            mountPath: "/home/jenkins/.m2/repository"
        workspaceVolume:
          emptyDirWorkspaceVolume:
            memory: false
        yaml: |
          apiVersion: v1
          kind: Pod
          spec:
            containers:
            - name: jnlp
              volumeMounts:
              {{#each maven.files}}
              - name: {{dns1123 @key}}
                mountPath: {{../maven.home}}/{{@key}}
                subPath: {{@key}}
                readOnly: true
              {{/each}}
            volumes:
            {{#each maven.files}}
            - name: {{dns1123 @key}}
              {{#ifeq volumeType "ConfigMap"}}configMap{{/ifeq}}{{#ifeq volumeType "Secret"}}secret{{/ifeq}}:
                {{#ifeq volumeType "ConfigMap"}}name{{/ifeq}}{{#ifeq volumeType "Secret"}}secretName{{/ifeq}}: {{volumeName}}
                items:
                - key: {{#if entryName}}{{entryName}}{{else}}{{@key}}{{/if}}
                  path: {{@key}}
            {{/each}}
      - containers:
        - image: "eclipsecbijenkins/ui-test-agent:0.0.1@sha256:bbbd136234e7c669e06b3c96e35c1fa72c3a95c1de4bc7cdf8ff99b60383156c"
          livenessProbe:
            failureThreshold: 0
            initialDelaySeconds: 0
            periodSeconds: 0
            successThreshold: 0
            timeoutSeconds: 0
          name: "jnlp"
          resourceLimitCpu: "2375m"
          resourceRequestCpu: "1250m"
          resourceLimitMemory: "2560Mi"
          resourceRequestMemory: "2560Mi"
          ttyEnabled: true
          command: ""
          args: ""
        instanceCap: 5
        instanceCapStr: "5"
        name: "ui-test-agent"
        namespace: "{{project.shortName}}"
        label: "ui-test"
        volumes:
        - persistentVolumeClaim:
            claimName: "tools-claim-jiro-{{project.shortName}}"
            mountPath: "/opt/tools"
            readOnly: true
        - configMapVolume:
            configMapName: "known-hosts"
            mountPath: "/home/jenkins/.ssh/"
        - emptyDirVolume:
            memory: false
            mountPath: "/home/jenkins/.m2/repository"
        workspaceVolume:
          emptyDirWorkspaceVolume:
            memory: false
        yaml: |
          apiVersion: v1
          kind: Pod
          spec:
            containers:
            - name: jnlp
              volumeMounts:
              {{#each maven.files}}
              - name: {{dns1123 @key}}
                mountPath: {{../maven.home}}/{{@key}}
                subPath: {{@key}}
                readOnly: true
              {{/each}}
            volumes:
            {{#each maven.files}}
            - name: {{dns1123 @key}}
              {{#ifeq volumeType "ConfigMap"}}configMap{{/ifeq}}{{#ifeq volumeType "Secret"}}secret{{/ifeq}}:
                {{#ifeq volumeType "ConfigMap"}}name{{/ifeq}}{{#ifeq volumeType "Secret"}}secretName{{/ifeq}}: {{volumeName}}
                items:
                - key: {{#if entryName}}{{entryName}}{{else}}{{@key}}{{/if}}
                  path: {{@key}}
            {{/each}}
      - containers:
        - image: "eclipsecbijenkins/migration-fat-agent:3.27"
          livenessProbe:
            failureThreshold: 0
            initialDelaySeconds: 0
            periodSeconds: 0
            successThreshold: 0
            timeoutSeconds: 0
          name: "jnlp"
          resourceLimitCpu: "2375m"
          resourceRequestCpu: "1250m"
          resourceLimitMemory: "2560Mi"
          resourceRequestMemory: "2560Mi"
          ttyEnabled: true
          command: ""
          args: ""
        instanceCap: 5
        instanceCapStr: "5"
        name: "migration-agent"
        namespace: "{{project.shortName}}"
        label: "migration"
        volumes:
        - persistentVolumeClaim:
            claimName: "tools-claim-jiro-{{project.shortName}}"
            mountPath: "/opt/tools"
            readOnly: true
        - configMapVolume:
            configMapName: "known-hosts"
            mountPath: "/home/jenkins/.ssh/"
        - emptyDirVolume:
            memory: false
            mountPath: "/home/jenkins/.m2/repository"
        workspaceVolume:
          emptyDirWorkspaceVolume:
            memory: false
        yaml: |
          apiVersion: v1
          kind: Pod
          spec:
            containers:
            - name: jnlp
              volumeMounts:
              {{#each maven.files}}
              - name: {{dns1123 @key}}
                mountPath: {{../maven.home}}/{{@key}}
                subPath: {{@key}}
                readOnly: true
              {{/each}}
            volumes:
            {{#each maven.files}}
            - name: {{dns1123 @key}}
              {{#ifeq volumeType "ConfigMap"}}configMap{{/ifeq}}{{#ifeq volumeType "Secret"}}secret{{/ifeq}}:
                {{#ifeq volumeType "ConfigMap"}}name{{/ifeq}}{{#ifeq volumeType "Secret"}}secretName{{/ifeq}}: {{volumeName}}
                items:
                - key: {{#if entryName}}{{entryName}}{{else}}{{@key}}{{/if}}
                  path: {{@key}}
            {{/each}}

security:
  remotingCLI:
    enabled: false

unclassified:
  location:
    adminAddress: ci-admin@eclipse.org
    url: {{deployment.url}}

  mailer:
    adminAddress: ci-admin@eclipse.org
    replyToAddress: ci-admin@eclipse.org
    smtpHost: mail.eclipse.org

  globalDefaultFlowDurabilityLevel:
    durabilityHint: PERFORMANCE_OPTIMIZED

  simple-theme-plugin:
    elements:
    - cssUrl:
        url: "{{deployment.prefix}}/userContent/theme/quicksilver.css"
    - cssUrl:
        url: "//fonts.googleapis.com/css?family=Libre+Franklin:400,700,300,600,100"
    - jsUrl:
        url: "{{deployment.prefix}}/userContent/theme/title.js"

tool:
  {{> tools-jdk }}
  {{> tools-ant }}
  {{> tools-maven }}
  git:
    installations:
    - name: "git"
      home: "/usr/bin/git"
