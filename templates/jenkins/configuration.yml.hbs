jenkins:
  numExecutors: 0
  scmCheckoutRetryCount: 2
  mode: EXCLUSIVE
  systemMessage: ""

  disableRememberMe: false
  agentProtocols:
    - "JNLP4-connect"
    - "Ping"

  authorizationStrategy:
    projectMatrix:
      permissions:
        {{> permissions }}

  markupFormatter: rawHtml
  crumbIssuer:
    standard:
       excludeClientIPFromCrumb: false
  remotingSecurity:
    enabled: true

  securityRealm:
    ldap:
      configurations:
        - displayNameAttributeName: cn
          groupSearchBase: ou=group
          rootDN: dc=eclipse,dc=org
          server: ldapmaster
          userSearch: mail={0}
          mailAddressAttributeName: mail

  clouds:
  - kubernetes:
      name: "kubernetes"
      containerCapStr: "{{jenkins.maxConcurrency}}"
      jenkinsUrl: "http://jenkins-ui.{{kubernetes.master.namespace}}.svc.cluster.local{{deployment.prefix}}"
      jenkinsTunnel: "jenkins-discovery.{{kubernetes.master.namespace}}.svc.cluster.local:{{deployment.jnlpPort}}"
      maxRequestsPerHostStr: "32"
      namespace: "{{kubernetes.master.namespace}}"
      podRetention: "never"
      templates:
      - containers:
        - image: "{{docker.agent.defaultImage.name}}:{{docker.agent.defaultImage.tag}}@sha256:{{docker.agent.defaultImage.sha256}}"
          livenessProbe:
            failureThreshold: 0
            initialDelaySeconds: 0
            periodSeconds: 0
            successThreshold: 0
            timeoutSeconds: 0
          name: "jnlp"
          resourceLimitCpu: "2000m"
          resourceRequestCpu: "1000m"
          resourceLimitMemory: "4096Mi"
          resourceRequestMemory: "4096Mi"
          ttyEnabled: true
          command: ""
          args: ""
        instanceCap: 5
        name: "default-agent"
        namespace: "{{kubernetes.master.namespace}}"
        nodeUsageMode: NORMAL
        envVars:
        - envVar:
            key: "MAVEN_OPTS"
            value: "-Dorg.slf4j.simpleLogger.log.org.apache.maven.cli.transfer.Slf4jMavenTransferListener=warn"
        - envVar:
            key: "MAVEN_CONFIG"
            value: "-B -e"
        volumes:
        - persistentVolumeClaim:
            claimName: "tools-claim-jiro-{{project.shortName}}"
            mountPath: "/opt/tools"
            readOnly: true
        - configMapVolume:
            configMapName: "known-hosts"
            mountPath: "/home/jenkins/.ssh/"
        {{#if maven}}
        - emptyDirVolume:
            memory: false
            mountPath: "/home/jenkins/.m2/repository"
        {{/if}}
        {{#if gradle}}
        - emptyDirVolume:
            memory: false
            mountPath: "/home/jenkins/.gradle/caches"
        - emptyDirVolume:
            memory: false
            mountPath: "/home/jenkins/.gradle/daemon"
        - emptyDirVolume:
            memory: false
            mountPath: "/home/jenkins/.gradle/native"
        - emptyDirVolume:
            memory: false
            mountPath: "/home/jenkins/.gradle/workers"
        - emptyDirVolume:
            memory: false
            mountPath: "/home/jenkins/.gradle/wrapper"
        {{/if}}
        workspaceVolume:
          emptyDirWorkspaceVolume:
            memory: false
        yaml: |
          apiVersion: v1
          kind: Pod
          spec:
            containers:
            - name: jnlp
              volumeMounts:
              {{#each maven.files}}
              - name: {{dns1123 @key}}
                mountPath: {{../maven.home}}/{{@key}}
                subPath: {{@key}}
                readOnly: true
              {{/each}}
              {{#each gradle.files}}
              - name: {{dns1123 @key}}
                mountPath: {{../gradle.home}}/{{@key}}
                subPath: {{@key}}
                readOnly: true
              {{/each}}
            volumes:
            {{#each maven.files}}
            - name: {{dns1123 @key}}
              {{#ifeq volumeType "ConfigMap"}}configMap{{/ifeq}}{{#ifeq volumeType "Secret"}}secret{{/ifeq}}:
                {{#ifeq volumeType "ConfigMap"}}name{{/ifeq}}{{#ifeq volumeType "Secret"}}secretName{{/ifeq}}: {{volumeName}}
                items:
                - key: {{#if entryName}}{{entryName}}{{else}}{{@key}}{{/if}}
